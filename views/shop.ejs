<%- include('./partials/header') %>
    <div class="w-full min-h-screen bg-gray-100 text-gray-900 font-sans">
        <!-- Flash Messages -->
        <% if (flash.error && flash.error.length > 0) { %>
            <div class="bg-red-500 text-white text-center py-2">
                <%= flash.error %>
            </div>
            <% } %>
                <% if (flash.success && flash.success.length > 0) { %>
                    <div class="bg-green-500 text-white text-center py-2">
                        <%= flash.success %>
                    </div>
                    <% } %>

                        <!-- Hero Section -->
                        <div class="w-full bg-gradient-to-r from-gray-900 via-gray-800 to-gray-700 text-white py-20 px-4 sm:px-6 lg:px-8">
                            <div class="max-w-7xl mx-auto text-center">
                                <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold tracking-tight" data-aos="fade-down">
                                    Explore Our Collection
                                </h1>
                                <p class="text-lg sm:text-xl md:text-2xl mt-4 opacity-90 max-w-2xl mx-auto" data-aos="fade-down" data-aos-delay="100">
                                    Discover trendy bags with unbeatable discounts!
                                </p>
                                <!-- Search Bar -->
                                <div class="mt-10 max-w-xl mx-auto flex items-center">
                                    <div class="relative flex-1">
                                        <input type="text" id="searchInput" class="w-full pl-12 pr-4 py-3 rounded-full bg-white text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-400 shadow-sm transition-all duration-300" placeholder="Search products..." aria-label="Search products"
                                        />
                                        <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                                    </div>
                                    <div class="ml-4">
                                        <button id="cartButton" class="flex items-center relative p-2 rounded-full bg-white text-gray-900 shadow-sm hover:bg-gray-50 transition-all duration-200" aria-label="View cart">
                        <h4 class="totalproduct absolute -top-1 -right-1 bg-red-500 text-white text-xs font-semibold rounded-full h-5 w-5 flex items-center justify-center transition-all duration-300">
                            <%= cartCount %>
                        </h4>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Main Container -->
                        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 flex flex-col md:flex-row gap-8">
                            <!-- Sidebar -->
                            <aside class="w-full md:w-72 bg-white rounded-xl shadow-md p-6 md:sticky md:top-24" data-aos="fade-right">
                                <div class="flex justify-between items-center md:hidden">
                                    <h3 class="text-xl font-semibold text-gray-900">Filters</h3>
                                    <button id="toggleFilters" class="text-yellow-500 hover:text-yellow-600" aria-label="Toggle filters">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
                </button>
                                </div>
                                <div id="filterContent" class="mt-6 md:block hidden">
                                    <!-- Sort By -->
                                    <div class="mb-8">
                                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Sort By</h3>
                                        <form action="/products/shop">
                                            <select name="sortby" class="w-full px-4 py-2 bg-gray-50 rounded-lg text-gray-900 border border-gray-200 focus:outline-none focus:ring-2 focus:ring-yellow-400 transition-all" aria-label="Sort products" onchange="this.form.submit()">
                            <option value="popular" <%= sortby === 'popular' ? 'selected' : '' %>>Popular</option>
                            <option value="newest" <%= sortby === 'newest' ? 'selected' : '' %>>Newest</option>
                            <option value="price-low" <%= sortby === 'price-low' ? 'selected' : '' %>>Price: Low to High</option>
                            <option value="price-high" <%= sortby === 'price-high' ? 'selected' : '' %>>Price: High to Low</option>
                        </select>
                                        </form>
                                    </div>
                                    <!-- Collections -->
                                    <div class="mb-8">
                                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Collections</h3>
                                        <a href="#" class="block py-2 text-gray-600 hover:text-yellow-500 hover:bg-gray-50 rounded-md transition-colors">New Arrivals</a>
                                        <a href="#" class="block py-2 text-gray-600 hover:text-yellow-500 hover:bg-gray-50 rounded-md transition-colors">All Products</a>
                                        <a href="#" class="block py-2 text-gray-600 hover:text-yellow-500 hover:bg-gray-50 rounded-md transition-colors">Best Sellers</a>
                                    </div>
                                    <!-- Filters -->
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Filter By</h3>
                                        <div class="flex flex-col gap-3">
                                            <label class="flex items-center gap-2 cursor-pointer">
                            <input type="checkbox" class="h-5 w-5 text-yellow-500 focus:ring-yellow-400 rounded border-gray-300" aria-label="Filter by in stock" />
                            <span class="text-gray-600 text-sm">In Stock</span>
                        </label>
                                            <label class="flex items-center gap-2 cursor-pointer">
                            <input type="checkbox" class="h-5 w-5 text-yellow-500 focus:ring-yellow-400 rounded border-gray-300" aria-label="Filter by on sale" />
                            <span class="text-gray-600 text-sm">On Sale</span>
                        </label>
                                        </div>
                                    </div>
                                </div>
                            </aside>

                            <!-- Product Grid -->
                            <div class="flex-1">
                                <% if (product.length === 0) { %>
                                    <div class="text-center py-16" data-aos="fade-up">
                                        <h3 class="text-2xl font-semibold text-gray-900">No Products Found</h3>
                                        <p class="text-gray-600 mt-2">Check back soon for new arrivals!</p>
                                    </div>
                                    <% } else { %>
                                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                                            <% product.forEach(function(product){ %>
                                                <div class="bg-white rounded-xl shadow-md overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1 product-card" data-aos="fade-up">
                                                    <!-- Product Image -->
                                                    <div class="relative w-full h-72 bg-[<%= product.bgcolor || '#f5f5f5' %>] flex items-center justify-center overflow-hidden">
                                                        <img class="max-h-60 object-contain transition-transform duration-300 hover:scale-110" src="data:<%= product.mimeType %>;base64,<%= product.Image.toString('base64') %>" alt="<%= product.name %>" loading="lazy" />
                                                        <% if (product.discount > 0) { %>
                                                            <span class="absolute top-4 left-4 bg-yellow-400 text-gray-900 text-xs font-semibold px-2.5 py-1 rounded-full badge"><%= product.discount %>% OFF</span>
                                                            <% } %>
                                                                <% if (new Date(product.createdAt) > new Date(Date.now() - 7*24*60*60*1000)) { %>
                                                                    <span class="absolute top-4 right-4 bg-green-400 text-gray-900 text-xs font-semibold px-2.5 py-1 rounded-full badge">NEW</span>
                                                                    <% } %>
                                                    </div>
                                                    <!-- Product Details -->
                                                    <div class="p-5">
                                                        <h3 class="text-lg font-semibold text-gray-900 truncate" title="<%= product.name %>">
                                                            <%= product.name %>
                                                        </h3>
                                                        <p class=" text-gray-900 truncate" title="<%= product.description %>">

                                                            <%= product.description %>
                                                        </p>
                                                        <div class="flex items-center justify-between mt-3">
                                                            <div class="flex items-center gap-2">
                                                                <span class="text-lg font-medium text-gray-900">
                                    ₹ <%= (product.discount > 0 ? product.price * (1 - product.discount / 100) : product.price).toFixed(2) %>
                                </span>
                                                                <% if (product.discount > 0) { %>
                                                                    <span class="text-sm text-gray-500 line-through">
                                    ₹ <%= product.price.toFixed(2) %>
                                </span>
                                                                    <% } %>
                                                            </div>
                                                            <a href="/cart/add/<%= product._id %>" class="add-to-cart px-4 py-2 bg-yellow-400 text-gray-900 rounded-lg text-sm font-semibold hover:bg-yellow-500 transition-all duration-200 ripple" data-product-id="<%= product._id %>" aria-label="Add <%= product.name %> to cart">
                                Add to Cart
                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }) %>
                                        </div>
                                        <% } %>
                            </div>
                        </div>

                        <!-- AOS Initialization and Custom JavaScript -->
                        <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
                        <script>
                            AOS.init({
                                duration: 800,
                                once: true,
                            });

                            // Mobile Filter Toggle
                            const toggleButton = document.getElementById("toggleFilters");
                            const filterContent = document.getElementById("filterContent");
                            toggleButton.addEventListener("click", () => {
                                filterContent.classList.toggle("hidden");
                            });

                            // Search Bar (Placeholder for future backend integration)
                            const searchInput = document.getElementById("searchInput");
                            searchInput.addEventListener("input", (e) => {
                                console.log("Search query:", e.target.value);
                                // Future: Implement search filtering with backend
                            });

                            // Cart Count Update
                            document.querySelectorAll(".add-to-cart").forEach((button) => {
                                button.addEventListener("click", (e) => {
                                    e.preventDefault(); // Prevent default anchor behavior
                                    const totalProduct = document.querySelector(".totalproduct");
                                    const productId = button.getAttribute("data-product-id");

                                    // Backend cart addition
                                    fetch(`/cart/add/${productId}`, {
                                            method: "POST",
                                            headers: {
                                                "Content-Type": "application/json",
                                            },
                                        })
                                        .then((response) => response.json())
                                        .then((data) => {
                                            console.log("Product added to cart:", data);
                                            // Update cart count based on server response
                                            const newCount = data.cart.reduce((sum, item) => sum + item.quantity, 0);
                                            totalProduct.textContent = newCount;
                                            totalProduct.classList.add("animate-pulse");
                                            setTimeout(() => {
                                                totalProduct.classList.remove("animate-pulse");
                                            }, 300);
                                        })
                                        .catch((error) => {
                                            console.error("Error adding to cart:", error);
                                        });
                                });
                            });

                            // Cart Button Redirect
                            const cartButton = document.getElementById("cartButton");
                            cartButton.addEventListener("click", () => {
                                window.location.href = "/cart";
                            });
                        </script>
    </div>
    <%- include('./partials/footer') %>