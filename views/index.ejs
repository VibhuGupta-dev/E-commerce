<%- include('./partials/header') %>

    <!-- Main Container -->
    <div class="w-full min-h-screen bg-gray-50 text-gray-900">
        <!-- Hero Section -->
        <div class="w-full bg-gradient-to-r from-gray-800 to-gray-900 text-white py-12 px-4 sm:px-10 md:px-20">
            <h1 class="text-4xl md:text-5xl font-bold text-center" data-aos="fade-down">
                Welcome to <span class="text-yellow-500">ShopersBags</span>
            </h1>
            <p class="text-lg text-center mt-4 opacity-80" data-aos="fade-down" data-aos-delay="100">
                Your one-stop shop for trendy bags with exclusive deals!
            </p>
        </div>
        <% if(error.length > 0) { %>
            <div class="fixed top-4 left-1/2 transform -translate-x-1/2 px-6 py-3 bg-red-500 text-white rounded-lg shadow-lg animate-shake z-50" data-aos="fade-down">
                <span class="text-sm font-medium"><%= error %></span>
            </div>
            <% } %>
                <!-- Forms Section -->
                <div class="max-w-5xl mx-auto px-4 sm:px-10 md:px-20 py-12">
                    <!-- Flash Message -->
                    <% if(error.length > 0) { %>
                        <div class="fixed top-4 left-1/2 transform -translate-x-1/2 px-6 py-3 bg-red-500 text-white rounded-lg shadow-lg animate-shake z-50" data-aos="fade-down">
                            <span class="text-sm font-medium"><%= error %></span>
                        </div>
                        <% } %>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                                <!-- Register Section -->
                                <div class="bg-white rounded-xl shadow-lg p-8 transition-all duration-300 hover:shadow-xl" data-aos="fade-right">
                                    <h3 class="text-2xl font-semibold text-gray-900 text-center mb-6">Create Your Account</h3>
                                    <form autocomplete="off" action="/users/register" method="post" class="space-y-6">
                                        <div class="relative">
                                            <input class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-300 hover:bg-gray-200" type="text" placeholder="Full Name"
                                                name="Fullname" required />
                                        </div>
                                        <div class="relative">
                                            <input class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-300 hover:bg-gray-200" type="email"
                                                placeholder="Email" name="email" required />
                                        </div>
                                        <div class="relative">
                                            <input class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-300 hover:bg-gray-200" type="password"
                                                placeholder="Password" name="password" required />
                                        </div>
                                        <div class="relative">
                                            <input class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-300 hover:bg-gray-200" type="number"
                                                placeholder="Contact Number" name="contact" required />
                                        </div>
                                        <button type="submit" class="w-full py-3 bg-yellow-500 text-white rounded-lg font-semibold hover:bg-yellow-600 transition-all duration-300 transform hover:scale-105 hover:shadow-lg ripple">
            Create My Account
          </button>
                                    </form>
                                </div>


                                <!-- Login Section -->
                                <div class="bg-white rounded-xl shadow-lg p-8 transition-all duration-300 hover:shadow-xl" data-aos="fade-left">
                                    <h3 class="text-2xl font-semibold text-gray-900 text-center mb-6">Login to Your Account</h3>
                                    <form autocomplete="off" action="/users/login" method="post" class="space-y-6" id="loginForm">
                                        <div class="relative">
                                            <input class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-300 hover:bg-gray-200" type="email"
                                                placeholder="Email" name="email" required />
                                        </div>
                                        <div class="relative">
                                            <input class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-300 hover:bg-gray-200" type="password"
                                                placeholder="Password" name="password" required />
                                        </div>
                                        <div class="flex justify-center gap-4">
                                            <label class="flex items-center gap-2">
          <input type="radio" name="role" value="user" checked class="h-4 w-4 text-yellow-500 focus:ring-yellow-500" onclick="document.getElementById('loginForm').action='/users/login'" />
          <span class="text-gray-600">User</span>
        </label>
                                            <label class="flex items-center gap-2">
          <input type="radio" name="role" value="owner" class="h-4 w-4 text-yellow-500 focus:ring-yellow-500" onclick="document.getElementById('loginForm').action='/owner/login'" />
          <span class="text-gray-600">Owner</span>
        </label>
                                        </div>
                                        <button type="submit" class="w-full py-3 bg-yellow-500 text-white rounded-lg font-semibold hover:bg-yellow-600 transition-all duration-300 transform hover:scale-105 hover:shadow-lg ripple">
        Login
      </button>
                                    </form>
                                    <p class="text-center text-gray-600 mt-4">
                                        <a href="/users/logout" class="text-yellow-500 hover:underline">Logout</a> if already logged in
                                    </p>
                                </div>
                                </form>

                            </div>

                </div>
    </div>
    </div>

    <!-- AOS Initialization -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true,
        });
    </script>
    <%- include('./partials/footer') %>